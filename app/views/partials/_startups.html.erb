
<% @startups.each do |s| %>
	<% s.twitter.empty? ? twitter = '#' : twitter = s.twitter %>
	<div class='startups' style="width:20%;">
		<div class="startup-pic">
			<a href="<%=twitter%>" target="_blank">
				<img src="<%=s.pic_url%>" />
			</a>

			<div class='startup-text'>
				<a href="<%=twitter%>" target="_blank">
					<div class='startup-title-background'></div>
				</a>

				<div class='startup-title' style='color:white;'>
					<a href="<%=twitter%>" target="_blank" style="color:white;">
						<%= s.name %>
					</a>
				</div>
	<!-- 		<div class='startup-strapline-background'></div> -->
				<a href="<%=twitter%>" target="_blank">
					<div class='startup-strapline'><%= s.strapline %></div>
				</a>
			</div>
		
		</div>
	</div>
<% end %>
		
