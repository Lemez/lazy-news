    <% @logos = {'musically' => 'music_ally.png', 'cmu' => 'cmu.jpg', 'rollingstone' => 'rollingstone.png', 'musicbusinessworldwide' => 'mbw.png'} %>
    <% @style={'td'=>"padding:2px 10px 0 0;line-height:1.5;border-bottom:2px dotted white;vertical-align:middle;font-size:18px;", 'logo' => "margin: 4px 2px 2px 4px;border-radius:6px;", 'img'=>"padding:2px auto 0 0;", 'date'=> "padding:2px 10px 0 0;line-height:1.5;border-bottom:2px dotted white;vertical-align:middle;font-style: italic;font-size: 10px;"} %>
    <% @lastsource = '' %>

     <%= render "partials/startups_header" %> 

      <% @companies.each do |startup| %>
        <tr>
        
           <td width="100" valign="top" style="<%=@style['td']%>"> 
        <%= image_tag startup.pic_url, alt: startup.name, class: "image_fix", width: '120', height: '70',style: @style['img']  %>
      </td>
           <td width="50" valign="top" style="<%=@style['date']%>"> 
        <%= startup.modified.strftime("%d.%m.%Y").strip %>
      </td>
   
          <td><strong><%= startup.name %></strong></br></br>
         <%= startup.strapline %></td>
           <td></td>
           
        </tr>
        <% end %>

    <% @stories.each do |story|%>

      <% @story = story %>
      <%= render "partials/mailer_header" if @story.source != @lastsource  %>
    
    <tr>
       
        <td width="100" valign="top" style="<%=@style['td']%>"> 
        <%= image_tag story.pic_url, alt: story.title, class: "image_fix", width: '120', height: '70',style: @style['img']  %>
      </td>
      <td width="50" valign="top" style="<%=@style['date']%>"> 
        <%= story.modified.strftime("%d.%m.%Y").strip %>
      </td>
   
     
      <td width="500" valign="top" style="<%=@style['td']%>">  
        <%= link_to story.title, story.url, :target => "_blank" %>
      </td>
      <td></td>

        
     

     
    </tr>

     <% @lastsource = story.source %>

    <% end %>
 