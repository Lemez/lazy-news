    <% @logos = {'musically' => 'music_ally.png', 'cmu' => 'cmu.jpg'} %>
    <% @style={'td'=>"padding:2px 10px 0 0;line-height:1.5;border-bottom:2px dotted white;vertical-align:middle;", 'logo' => "padding:4px auto 0 0;", 'img'=>"padding:2px auto 0 0;"} %>

    <% @stories.each do |story|%>
    <tr>

      <td width="50" valign="top" style="<%=@style['td']%>"> 
        <%= story.modified.strftime("%d.%m.%Y").strip %>
      </td>
   
      <td width="75" valign="top" style="<%=@style['td']%>"> 
        <%= image_tag story.pic_url, width: '75', height: '51',style: @style['img']  %>
      </td>

      <td width="700" valign="top" style="<%=@style['td']%>">  
        <%= link_to story.title, story.url, :target => "_blank" %>

      <td width="80" valign="top" style="<%=@style['td']%>" >
        <%= image_tag @logos[story.source], width: '80', style: @style['logo']  %>
      </td>

      </td>
    </tr>
    <% end %>
 